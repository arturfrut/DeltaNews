---
import HomePage from '@/components/HomePage'
import { getPosts } from '@/utils'
import { getMaxPosts } from '@/utils'

const MAX_POSTS = 5; 
const posts = await getPosts(MAX_POSTS);
const totalPosts = await getMaxPosts();
const totalPages = Math.ceil(totalPosts / MAX_POSTS); 

---


<HomePage posts={posts} pageNumber={1} totalPages={totalPages} />


